{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "paths": {
      "@mainsquare/excalidraw-common": ["./common/src/index.ts"],
      "@mainsquare/excalidraw-common/*": ["./common/src/*"],
      "@mainsquare/excalidraw-element": ["./element/src/index.ts"],
      "@mainsquare/excalidraw-element/*": ["./element/src/*"],
      "@mainsquare/excalidraw": ["./excalidraw/index.tsx"],
      "@mainsquare/excalidraw/*": ["./excalidraw/*"],
      "@mainsquare/excalidraw-math": ["./math/src/index.ts"],
      "@mainsquare/excalidraw-math/*": ["./math/src/*"],
      "@mainsquare/excalidraw-utils": ["./utils/src/index.ts"],
      "@mainsquare/excalidraw-utils/*": ["./utils/src/*"]
    }
  }
}
